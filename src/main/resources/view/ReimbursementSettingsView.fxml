<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ReimbursementSettingsController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@/css/admin-dashboard.css">

    <VBox spacing="15" alignment="CENTER" layoutX="50.0" layoutY="50.0">

        <Label text="Configure Reimbursement Amounts" styleClass="dashboard-title"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Restaurant (€):"/>
            <TextField fx:id="restaurantAmountField" promptText="e.g. 3.0" styleClass="input-field"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Supermarket (€):"/>
            <TextField fx:id="supermarketAmountField" promptText="e.g. 3.0" styleClass="input-field"/>
        </HBox>

        <Button text="Save Reimbursement Settings"
                onAction="#saveReimbursementSettings"
                styleClass="main-button"/>

    </VBox>
</AnchorPane>
