<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SettingsController"
      spacing="20" alignment="TOP_CENTER" style="-fx-padding: 40;">

    <Label text="Settings" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <VBox spacing="15" alignment="TOP_LEFT" style="-fx-padding: 20;">
        <Label text="Account Settings" style="-fx-font-size: 18; -fx-font-weight: bold;" />
        <Button text="Change Password" prefWidth="200" />
        <Button text="Update Profile" prefWidth="200" />
        <Button text="Notification Preferences" prefWidth="200" />
    </VBox>

    <VBox spacing="15" alignment="TOP_LEFT" style="-fx-padding: 20;">
        <Label text="App Settings" style="-fx-font-size: 18; -fx-font-weight: bold;" />
        <Button text="Language" prefWidth="200" />
    </VBox>

</VBox>
